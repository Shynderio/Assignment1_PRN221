<Page x:Class="Estore.Views.Admin.ProductsManageView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Estore.Views.Admin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductsManageView">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Background="#2196F3" Grid.Row="0">
            <TextBlock Text="Admin Panel" Foreground="White" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10"/>
        </Border>
        <Button Name="backButton" FontSize="20" Content="Back" FontWeight="Bold" Width="50" HorizontalAlignment="Left" Margin="20,10"/>
        <TextBox x:Name="searchTextBox" Grid.Row="1" Margin="20" VerticalAlignment="Top" Width="200" Height="30"/>
        <Button Content="Add Product" Grid.Row="1" Margin="20,60,20,20" VerticalAlignment="Top" HorizontalAlignment="Left" Width="150" Height="40" FontSize="16"/>
        <ListView x:Name="productListView" Grid.Row="1" Margin="20,120,20,20">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}" Margin="10" VerticalAlignment="Center" FontSize="18"/>
                        <Button Content="Delete" Margin="10" VerticalAlignment="Center" Width="80" Height="30" FontSize="14"/>
                        <Button Content="Update" Margin="10" VerticalAlignment="Center" Width="80" Height="30" FontSize="14"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
